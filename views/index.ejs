<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>URL Shortner</title>
</head>
<body class="bg-dark">
<div class="container">
    <center><h1 class="my-4 bg-primary rounded-pill">URL Shortner</h1></center>
    <form action="shortUrls" method="post" class="my-4 form-inline rounded">
        <!-- <label for="fullUrl" class="sr-only">Enter the URL:</label> -->
        <input type="url" required name="fullUrl" id="fullUrl" placeholder="Enter your URL:" class="form-control col mb-2">
        <button type="submit" class="btn btn-success">Shortern</button>
    </form>

    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Full url</th>
                <th>Short Url</th>
                <th>Clicks</th>
            </tr>
        </thead>
        <% shortUrls.forEach(shortUrl => { %>
            <tr>
                <td><a href="<%= shortUrl.full%>"><%= shortUrl.full%></a></td>
                <td><a href="<%= shortUrl.short%>"><%= shortUrl.short%></a></td>
                <td><%= shortUrl.clicks%></td>
            </tr>
        <% }) %>
        <tbody>
        </tbody>
    </table>
</div>
</body>
</html>